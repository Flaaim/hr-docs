<table class="table" id="static-table">
    <thead>
    <th>Наименование</th>
    <th>Раздел</th>
    <th>Тип</th>
    <th>Добавлен/обновлен</th>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td><a href="/document/{{ document.id }}">{{ document.title }}</a></td>
            <td> {{ document.section_name }}</td>
            <td> {{ document.type_name }}</td>
            <td> {{ document.updated| date('d.m.Y') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div id="dynamic-table-wrapper" style="display: none;">
    <div class="mb-3">
        <!-- Селект-фильтр -->
        <label for="sectionFilter">Фильтр по секции:
            <select id="sectionFilter" class="form-control">
                <option value="" selected>Все</option>
            </select>
        </label>
        <!-- Селект-фильтр -->
        <label for="typeFilter">Фильтр по типу:
            <select id="typeFilter" class="form-control" >
                <option value="" selected>Все</option>
            </select>
        </label>
        <button type="reset" id="resetFilter" class="btn btn-primary">Сбросить</button>
    </div>
    <div id="dynamic-table"></div>
    <a href="#" id="show-static" class="btn btn-primary">Показать простую версию</a>
</div>
