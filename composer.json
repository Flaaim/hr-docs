{
    "name": "slimtest/slimtest",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "php-di/php-di": "^7.0",
        "ext-json": "*",
        "symfony/console": "^6.4",
        "slim/twig-view": "^3.4",
        "twig/twig": "^3.21",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.6",
        "doctrine/dbal": "^4.2",
        "phpmailer/phpmailer": "^6.10",
        "respect/validation": "^2.4",
        "odan/session": "^5.1",
        "psr/simple-cache": "^3.0",
        "monolog/monolog": "^3.9",
        "phpoffice/phpword": "^1.3",
        "league/oauth2-client": "^2.8",
        "league/oauth2-google": "^4.0",
        "aego/oauth2-yandex": "^0.2.2",
        "yoomoney/yookassa-sdk-php": "^3.8",
        "symfony/cache": "^6.4",
        "telegram-bot/api": "^2.5",
        "symfony/messenger": "^6.4",
        "symfony/doctrine-messenger": "^6.4"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "scripts" : {
      "app": "php bin/app.php --ansi ",
      "lint": "phplint --no-cache",
      "cs-check": "phpcs",
      "cs-fix": "phpcbf",
      "psalm": "psalm",
      "test": "phpunit --colors=always --display-warnings"
    },
    "require-dev": {
        "overtrue/phplint": "^9.6",
        "squizlabs/php_codesniffer": "^3.13",
        "vimeo/psalm": "^6.10",
        "phpunit/phpunit": "^10.5",
        "deployer/deployer": "^7.5"
    }
}
